@model IEnumerable<Desafio_Stats.ViewModel.ConsultaDapperViewModel>

@{
    var quantidade = ViewBag.Quantidade;
    var condicao = ViewBag.Condicao;

    var quantidadeSerializada = Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(quantidade));
    var condicaoSerializada = Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(condicao));

}
<canvas id="consultaDapper" width="600" height="250">
</canvas>

@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.9.1/dist/chart.min.js"></script>
    <script>
        var consultaQuantidade = @quantidadeSerializada;
        var consultaCondicao = @condicaoSerializada;

        var ctx = document.getElementById("consultaDapper");
        var consultaDapper = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: consultaCondicao,
                datasets: [{
                    label: 'Resultado',
                    fill: false,
                    data: consultaCondicao,
                    backgroundColor: '#E91E63',
                    borderColor: [
                        'rgba(255,99,132,1)',
                        'rgba(255,99,132,1)',
                        'rgba(255,99,132,1)',
                        'rgba(255,99,132,1)',
                        'rgba(255,99,132,1)',
                        'rgba(255,99,132,1)',
                    ],
                    borderWidth: 1
                },
                ]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                },
                title: {
                    display: true,
                    text: 'Tipos de ocorrência'
                },
                responsive: true,
                tooltips: {
                    callbacks: {
                        labelColor: function (tooltipItem, chart) {
                            return {
                                borderColor: 'rgb(255, 0, 20)',
                                backgroundColor: 'rgb(255,20, 0)'
                            }
                        }
                    }
                },
                legend: {
                    labels: {
                        fontColor: 'red',
                    }
                }
            }
        });



    </script>
    }




